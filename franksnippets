import { Card } from "./card.js";
import { Board } from "./board.js";

export class Card {
  constructor() {
    this.flipped = false;
    this.name = null;
    this.image = null;
  }

  getElement() {}

  isMatch(secondCard) {
    return this.name === secondCard.name;
  }
}

